<view wx:if="{{showPicker}}" class="date-picker">
    <view class="date-picker-mask" catchtouchstart="onTouchmask"></view>
    <view class="date-picker-content" catchtouchstart="onTouchmask">
        <view class='date-picker-content-top' catchtouchstart="onTouchmask">
            <view class="date-picker-content-cancel" hover-class="hover-class" catchtouchend="onCacnelClick">
                取消
            </view>
            <view class="date-picker-content-sure"  hover-class="hover-class" catchtouchend="onSureClick">
                确认
            </view>
        </view>
        <view class="date-picker-content-line" catchtouchstart="onTouchmask"></view>
        <view class="date-picker-content-center" catchtouchstart="onTouchmask">
            <picker-view class="date-picker-content-item" indicator-style="height: 70rpx; " value="{{tempitemPos}}" bindchange="item_onChange">
                <picker-view-column>
                    <view wx:for="{{times}}" wx:key="*this" style="height: 70rpx; text-align:center;  font-size: 36rpx; line-height:70rpx; color:#353535;">{{item}}时</view>
                </picker-view-column>
            </picker-view>
            <picker-view class="date-picker-content-item" indicator-style="height: 70rpx; " value="{{tempbranchPos}}" bindchange="branch_onChange">
                <picker-view-column>
                    <view wx:for="{{branchs}}" wx:key="*this" style="height: 70rpx; text-align:center;  font-size: 36rpx; line-height:70rpx; color:#353535;">{{item}}分</view>
                </picker-view-column>
            </picker-view>
        </view>
    </view>
</view>