@import './common.wxss';
.arrow_right image {
    width: 18rpx;
}
.pic_wrap {
  position: relative;
  width: 150rpx;
  height: 150rpx;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  margin-right: 14rpx;
  overflow: hidden;
  float: left;
}
.pic_wrap .delete{
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0,0,0,.5);
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}

.pic_wrap image.pic {
  width: 100%;
  height: 100%;
}
.bh10{
  background: #f5f5f5;
  height: 10rpx;
}
.input-item {
    background: #f3f3f3;
    border-radius: .1rem;
}
