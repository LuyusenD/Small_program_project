    <view class="table">
      <view class="tr">
        <view class="td">{{language?'类型':'Type'}}</view>
        <view class="td">{{language?'价格':'Money'}}</view>
        <view class="td">{{language?'操作':'operation'}}</view>
      </view>
      <view class="tr" >
        <view class="td" style="font-size:12px">{{item.name}}</view>
        <view class="td">{{item.money}}</view>
