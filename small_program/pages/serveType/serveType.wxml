<view wx:if="{{active==0}}">
  <van-cell-group wx:for="{{list}}" key="{{index}}">
    <van-cell title="{{item.type==1?'清洁服务':'家具安装'}}" value="{{item.title}}" />
  </van-cell-group>
  <!-- <view slot="right" >{{language?'删除':'del'}}</view>
</van-swipe-cell> -->

  <view style="width:90%;margin:0 auto;padding-top:50px">
    <van-button size="large" bindtap="add" type="primary">{{language?'添加':'add'}}</van-button>
  </view>
</view>

<view wx:if="{{active==1}}">
  <!-- <van-panel wx:for="{{list}}" key="{{index}}" title="服务类型" desc="{{item.title}}" status="{{item.type==1?'清洁服务':'家具安装'}}" use-footer-slot>
  <view slot="footer">
    <van-button size="small"  data-item="{{item}}" bindtap="upload" style="margin-left:50%;">修改</van-button>
    <van-button size="small" type="danger" bindtap="del" data-item="{{item}}" style="margin-left:5px;">删除</van-button>
  </view>
</van-panel> -->
  <view wx:for="{{list1}}">
    <view class="title">{{item[0].type==1?'清洁服务':'家具安装'}}:</view>
    <block>
      <view class="table">
        <view class="tr">
          <view class="td">{{language?'类型':'Type'}}</view>
          <view class="td">{{language?'内容':'Content'}}</view>
          <view class="td">{{language?'操作':'operation'}}</view>
        </view>
        <view class="tr"  wx:for="{{item}}" wx:for-item="items">
          <view class="td" style="font-size:12px">{{items.type==1?'清洁服务':'家具安装'}}</view>
          <view class="td">{{items.title}}</view>
          <view class="td">
            <van-button size="mini" type='info' data-item="{{items}}" bindtap="upload">修改</van-button>
            <van-button size="mini" type='warning' bindtap="del" data-item="{{items}}">删除</van-button>
          </view>
        </view>
      </view>
    </block>
  </view>
</view>
<van-popup show="{{ show }}" bind:close="onClose1">
  <view style="width:300px;height:200px">
    <van-cell-group>
      <view style="height:20px"></view>
      <van-cell title="{{language?'类型':'Type'}}" is-link value="{{obj.typeIndex==''?language?'请选择类型':'Please select type':obj.typeIndex}}" bind:click='click' />
      <van-field label="{{language?'服务内容':'serviceContent' }}" required value="{{ obj.title }}" placeholder="{{language?'请输入服务内容':'Please enter the service content'}}" border="{{ false }}" bind:change="onChange" />
    </van-cell-group>
    <view style="width:90%;margin:0 auto; padding-top:20rpx;">
      <van-button size="large" bindtap="add1" type="primary">{{title}}</van-button>
    </view>
  </view>
</van-popup>
<van-popup show="{{ isType }}" position="bottom" overlay="{{ true }}" bind:close="onClose" safe-area-inset-bottom>

  <van-picker show-toolbar columns="{{ serve }}" bind:cancel="onCancelisTypey" bind:confirm="onChangeisType" />

</van-popup>