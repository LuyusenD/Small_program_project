<!--pages/placeOrder/placeOrder.wxml-->
<van-tabs wx:if='{{obj.oTypeIndex<3}}' active="{{ active }}" bind:change="activeonChange">
  <van-tab title="接机"></van-tab>
  <van-tab title="送机"></van-tab>
</van-tabs>
  <van-cell-group>
   <van-field
    value="{{ obj.oName }}"
    required
    clearable
    label="{{language?'姓名':'Full name'}}"
    left-icon="manager"
    placeholder="{{language?'请输入你的姓名':'Please enter your name'}}"
    border="{{ false }}"
    bind:input='getName'
  />
  <!-- <van-cell
      required
      icon="location"
      title="{{language?'所在区域':'Location'}}"
      value="{{Location==''&&language?'请选择所在区域':Location==''&&!language?'Please select the area.':Location.value}}>"
      bind:click='getLocation'
  /> -->
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{ oTel }}"
    left-icon="phone"
    required
    right
    clearable
    label="{{language?'电话':'tel'}}"
    placeholder="{{language?'请输入电话号码':'Please enter your telephone number'}}"
    border="{{ false }}"
    use-button-slot
    bind:click-icon="onClickIcon"
    error-message="{{phoneerr}}"
    border="{{ false }}"
    bind:input='getPhone'
  >
    <van-button slot="button" size="mini" bind:click="formCountry" type="default">{{Country}}</van-button>
  </van-field>
</van-cell-group>
<van-cell-group>
  <!-- <van-field
    value="{{ obj.oTel }}"
    type='number'
    required
    clearable
    label="{{language?'电话':'tel'}}"
    left-icon="phone"
    icon="question-o"
    placeholder="{{language?'请输入电话号码':'Please enter your telephone number'}}"
    bind:click-icon="onClickIcon"
    error-message="{{phoneerr}}"
    border="{{ false }}"
    bind:input='getPhone'
  >
  
  </van-field> -->
    <van-cell
      required
      icon="location"
      title="{{language?'预约地址':'Reservation address'}}"
      value="{{obj.oAddress==''&&language?'请选择预约地址':obj.oAddress==''&&!language?'Please choose the reservation address':obj.oAddress}}>"
      bind:click='getAddress'
  />
    <van-cell
      required
      icon="clock"
      title="{{language?'预约时间':'Time of appointment'}}"
      value="{{obj.oTime==''&&language?'请选择预约时间':obj.oTime==''&&!language?'Please choose the appointment time':obj.oTime}}>"
      bind:click='getTime'
  />
    <!-- <van-cell
      required
      icon="friends"
      title="{{language?'服务类型':'Service type'}}"
      value="{{obj.oType==''&&language?'请选择服务类行':obj.oType==''&&!language?'Please select the service line':obj.oType}}>"
      bind:click='getType'
  /> -->
    <van-cell
      required
      icon="friends"
      title="{{language?'服务车型':'Service vehicle'}}"
      value="{{obj.oVehicle==''&&language?'请选择服务车型':obj.oVehicle==''&&!language?'Please choose the service model':obj.oVehicle}}>"
      bind:click='getVehicle'
  />
</van-cell-group>
<van-cell-group>
  <van-field
    value="{{ obj.oRemark }}"
    label="{{language?'留言':'message'}}"
    type="textarea"
    placeholder="{{language?'请输入留言':'Please enter a message'}}"
    bind:change='leMessage'
    autosize
    border="{{ false }}"
  />
</van-cell-group>
<view style='height:100rpx;'></view>
<!-- 预约时间 -->
<van-popup
 style='z-index:100000'
  show="{{ time }}"
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
  bind:confirm="onChangeServeType"
  safe-area-inset-bottom
>

  <van-datetime-picker
  type="datetime"
  value="{{ currentDate }}"
  min-date="{{ minDate }}"
  max-date="{{ maxDate }}"
  bind:cancel="onCancelTime"
  bind:change="onChangeTime"
  bind:confirm="onConfirmTime"

/>
<van-row>
  <van-col offset="1" span="3.8">年</van-col>
  <van-col offset="2" span="3.8">月</van-col>
  <van-col offset="2" span="3.8">日</van-col>
  <van-col offset="2" span="3.8">时</van-col>
  <van-col offset="2" span="3.8">分</van-col>
</van-row>
</van-popup>
<!-- 服务类型 -->
<van-popup
  show="{{ show }}"
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
  safe-area-inset-bottom
>

  <van-picker
  show-toolbar
  title="{{language?'请选择服务车辆':'Please select the service vehicle'}}"
  columns="{{ serveType }}"
  bind:cancel="onCancelServeType"
  bind:confirm="onChangeServeType"
/>
</van-popup>
<!-- x选择车型 -->
<van-popup
  show="{{ vehicle }}"
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
  safe-area-inset-bottom
>

  <van-picker
  show-toolbar
  title="{{language?'请选择服务车辆':'Please select the service vehicle'}}"
  columns="{{ ServeVehicle }}"
  bind:cancel="onCancelVehicle"
  bind:confirm="onChangeVehicle"
/>
</van-popup>
<van-popup
  show="{{ LocationIs }}"
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
  safe-area-inset-bottom
>

  <van-picker
  show-toolbar
  title="{{language?'请选择所在区域':'Please select the area.'}}"
  columns="{{ items }}"
  bind:cancel="onCancelLocation"
  bind:confirm="onChangeLocation"
/>
</van-popup>
<van-popup
  show="{{ CountryIsShow }}"
  position="bottom"
  overlay="{{ false }}"
  bind:close="onClose"
  safe-area-inset-bottom
>

  <van-picker
  show-toolbar
  columns="{{  CountryList }}"
  bind:cancel="onCancelCountry"
  bind:confirm="onChangeCountry"
/>
</van-popup>
<van-submit-bar
  price="{{ price }}"
  button-text="{{language?'立即预约':'Immediate appointment'}}"
  bind:submit="makeAppointment"
/>
